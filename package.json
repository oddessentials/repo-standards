{
  "name": "@oddessentials/repo-standards",
  "private": false,
  "version": "4.0.0",
  "description": "Standards and CI filtering utilities for multi-stack repository governance.",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run validate:schema && tsc -p tsconfig.build.json && tsx scripts/build.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "ci": "npm run lint && npm run format:check && npm run typecheck && npm run test && npm run build",
    "generate:standards": "tsx scripts/generate-standards.ts",
    "validate:schema": "tsx scripts/validate-schema.ts",
    "verify": "npm run ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.2",
    "@semantic-release/npm": "^9.0.2",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "coverage-v8": "^0.0.1-security",
    "eslint": "^9.39.1",
    "fast-json-stable-stringify": "^2.1.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^24.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "lint-staged": {
    "*.{js,ts,mjs,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,mjs}": [
      "eslint --fix"
    ]
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddessentials/repo-standards.git"
  },
  "homepage": "https://github.com/oddessentials/repo-standards#readme",
  "bugs": {
    "url": "https://github.com/oddessentials/repo-standards/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config/*": "./dist/config/*",
    "./schema/*": "./dist/schema/*"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
