{
  "name": "repo-standards",
  "private": true,
  "version": "1.0.0",
  "description": "Standards and CI filtering utilities for multi-stack repository governance.",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write",
    "test": "echo \"(placeholder) add test runner here\" && exit 0",
    "ci": "npm run lint && npm run test && npm run build",
    "generate:ci": "ts-node-esm scripts/generate-standards.ts",
    "generate:ci:ts": "npm run generate:ci -- typescript-js",
    "generate:ci:python": "npm run generate:ci -- python",
    "generate:ci:dotnet": "npm run generate:ci -- csharp-dotnet"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
